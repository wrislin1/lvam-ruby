<% page_title "Account" %>
<%= render 'partials/account_tab_layout' do %>
  <div class="w-full mx-auto lg:max-w-3xl">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col gap-5', method: :put }) do |f| %>
      <%= render FormErrorsComponent.new model: resource %>
      <%= f.input :email,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="p-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
          <i class="far fa-info-circle fa-lg me-1 text-blue-500"></i>
          Currently awaiting confirmation for email: <%= resource.unconfirmed_email %>
        </div>
      <% end %>
      <div class="flex flex-col gap-5 md:flex-row md:items-center">
        <%= f.input :first_name, required: true, input_html: { autocomplete: "given-name" }, wrapper_html: { class: 'flex-1' } %>
        <%= f.input :last_name, required: true, input_html: { autocomplete: "family-name" }, wrapper_html: { class: 'flex-1' } %>
      </div>
      <div class="border border-gray-300 rounded-lg flex flex-col gap-3" role="group">
        <input type="checkbox" id="changePw" value="true" class="hidden peer">
        <label
          for="changePw"
          class="cursor-pointer flex items-center justify-between peer-checked:hidden rounded-lg px-4 py-3 text-sm font-medium text-primary-900 bg-white rounded-e-lg border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white"
        >
          <span class="flex items-center gap-2">
            <i class="fas fa-lock-open text-primary-500"></i>
            Change my password
          </span>
          <i class="far fa-chevron-down peer-checked:rotate-180 transition-all"></i>
        </label>
        <label
          for="changePw"
          class="cursor-pointer hidden border-b bg-gray-100 border-gray-200 peer-checked:flex items-center justify-between rounded-t-lg text-primary-600 px-4 py-3 text-sm font-medium border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-2 focus:ring-blue-700 focus:text-blue-700 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-blue-500 dark:focus:text-white"
        >
          <span class="flex items-center gap-2">
            <i class="fas fa-lock text-primary-500"></i>
            Keep my password
          </span>
          <i class="far fa-chevron-up"></i>
        </label>
        <div class="hidden peer-checked:flex flex-col md:flex-row p-3 gap-3">
          <% hint = @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil %>
          <%= f.input :password, label: "New password", required: true, hint:, wrapper_html: { class: 'flex-1' }, input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "New password confirmation", required: true, wrapper_html: { class: 'flex-1' }, input_html: { autocomplete: "new-password" } %>
        </div>
      </div>
      <%= f.input :current_password, required: true, hint: 'we need your current password to confirm your changes', input_html: { autocomplete: "current-password" } %>
      <%= render PrimaryButtonComponent.new 'Save', type: :submit, icon: 'fa-lg fa-floppy-disk' %>
    <% end %>
    <div class="mt-8">
      <%= button_to registration_path(resource_name), class: 'text-sm underline hover:text-red-400 text-red-500', data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete do %>
        <i class="fas fa-user-minus text-red-500 me-1"></i>
        Delete my account
      <% end %>
    </div>
  </div>
<% end %>