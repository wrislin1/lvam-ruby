<% if errors.present? %>
  <div class="p-3 mb-3 bg-red-50 border border-red-200 rounded-md">
    <h3 class="text-sm font-semibold text-red-700 mb-1">Please fix the following:</h3>
    <ul class="list-disc pl-5 text-red-600 text-sm">
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
